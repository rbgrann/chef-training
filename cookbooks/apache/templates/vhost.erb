# vhost template file

<% if @port == 80 -%>
 	NameVirtualHost *:80
<% end -%>

<VirtualHost *:<%= @port %> >

	ServerName <%= @domain%>
 	ServerAlias <%= @domain %>
 	DocumentRoot <%= @document_root %>

<Directory />
    Options FollowSymLinks
    AllowOverride None
</Directory>
<Directory <%= @document_root %> >
       Options Indexes MultiViews FollowSymLinks
       AllowOverride None
       Order allow,deny
       Allow from all
</Directory>
</VirtualHost>
